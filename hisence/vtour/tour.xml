    <action name="page_change1">
        set(autorotate.enabled,true);
        set(a,get(view.hlookat));
        mod(a,360);
        if(a LT -359,js(HOTSPOT.changeScene(1)));
        set(plugin[skin_gyro].enabled,false);
        <!--showlog();trace(a)-->
        <!--if(a == 90,;js(HOTSPOT.changeScene(7)););-->
